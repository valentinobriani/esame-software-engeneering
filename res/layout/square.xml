<?xml version="1.0" encoding="utf-8"?>
<com.example.esamesoftwareengeneering.game.board.cells.Square xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/square"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000080"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/square_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:id="@+id/square_selected_piece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/square_selected_piece"
        android:visibility="invisible" />
    
    <ImageView
        android:id="@+id/square_selected_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/square_selected_destination"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/piece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

</com.example.esamesoftwareengeneering.game.board.cells.Square>
